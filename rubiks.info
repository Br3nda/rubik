name = "Rubiks"
description = "Test theme for layouts."
version = "0.1"
base theme = "tao"
core = "6.x"
engine = "phptemplate"

scripts[] = "js/rubiks.js"
stylesheets[screen][] = "style.css"

regions[w] = "w"
regions[e] = "e"
regions[c] = "c"
regions[nw] = "nw"
regions[ne] = "ne"
regions[n] = "n"
